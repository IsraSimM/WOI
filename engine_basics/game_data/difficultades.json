    "formulas_calculo": {
        "stats_finales": "stat_final = base_stat * multiplicadores.enemigos[stat] + (nivel_mapa * 0.1) * dificultad_index",
        "prob_spawn": "prob_final = prob_base * spawns.densidad_enemigos * (1 + bots.agresividad / 10)",
        "rareza_boost_final": "rareza_final = rareza_base * spawns.rareza_boosts_mult",
        "puntos_muerte": "puntos_final = puntos_base * recompensas.puntos_mult * (1 + dificultad_index * 0.2)",
        "daño_efectivo": "daño_final = ataque * combate.daño_enemigo * (1 - defensa_objetivo / (defensa_objetivo + 10))",
        "prob_deteccion": "prob_det = (deteccion / distancia_al_jugador) * (1 + estrategia / 20) * (1 - sigilo_jugador / 10)",
        "tiempo_regeneracion": "regen_time = 10 / (estrategia * regeneracion_enemigos_mult) + (dificultad_index * 0.5)",
        "velocidad_efectiva": "vel_final = velocidad * (1 + burst_active ? 0.3 : 0) * combate.velocidad_mult",
        "drop_boost": "drop_prob_final = boost_drop_prob * recompensas.drop_rate * (1 - (tiempo_vivo / 60))",
        "peso_comportamiento": "peso_accion = agresividad * estrategia * (distancia_jugador < deteccion ? 2 : 0.5)",
        "numero_obstaculos": "obs_final = mapa.obstaculos * mapa.tamaño_mult * (1 + dificultad_index * 0.1)",
        "tamaño_mapa": "area_mapa = pow(mapa.tamaño_mult * base_tamaño, 2) * (1 + spawns.numero_enemigos / 10)",
        "cooldown_ability": "cd_final = base_cooldown * (1 / (1 + estrategia / 10)) * (dificultad_index * 0.05)",
        "multiplicador_puntos_boss": "puntos_boss = puntos_muerte * 3 * recompensas.puntos_mult * oleadas_continuas ? 1.5 : 1",
        "radio_interaccion": "radio_final = base_radio * (1 + estrategia / 5) * spawns.densidad_enemigos",
        "prob_emboscada": "prob_emb = sigilo * estrategia / 50 * (luz_baja ? 1.5 : 1) * bots.agresividad",
        "daño_critico": "dmg_crit = daño_efectivo * (1 + (velocidad_relativa / 2) * rand(0.5, 1.5))",
        "score_final_nivel": "score_total = suma_puntos * (tiempo_restante / tiempo_total) * (1 + boosts_recogidos * 0.1)"
    },
